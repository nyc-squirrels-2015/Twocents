<a href="/mantra/all">All Mantras</a>

<div>
	<h1>Your Focus Is: </h1>
	<h3>"<%= @mantra.focus %>"</h3>
	<!-- Focus Number [<%= @mantra.id %>] -->
	<!-- <a href="/mantra/<%= @mantra.id %>"><%= @mantra.focus %></a> -->
	<% if current_user %>
	<div class="update-btns">
		Update Your Focus:<%= erb :'/mantra/_edit' %>
			<form action="/mantra/<%= @mantra.id %>" value="POST">
				<input type="hidden" name="_method" value="delete">
				<input type="submit" value="Delete?">
			</form>
	</div>
	<% end %>
</div>

<!-- Add partial here for adding response to Mantra -->
<div>
  <form id="new-response" data-url='/response.json'>
    <h4>Share Your Wisdom:</h4>
     <textarea name="response[content]"></textarea>
    	<input type="hidden" name="response[mantra_id]" value="<%= @mantra.id %>">
    	<input type="submit" value="Share">
  	</form>
</div>

<div id= "responde">
  <h3>Responses</h3>
  <ol>
    <% @mantra.responses.each do |response| %>
    Wisdom From: <% response.commenter.name %>
    <li><%= response.content %></li>
    
  <% end %>
  </ol>
</div>


